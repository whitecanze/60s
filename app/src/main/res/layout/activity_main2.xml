<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/txtroll"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="520dp"
        android:fontFamily="@font/go_mono_bold"
        android:gravity="center_horizontal"
        android:text="00000000"
        android:textSize="76sp" />

    <TextView
        android:id="@+id/chk"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="450dp"
        android:fontFamily="@font/go_mono_bold"
        android:gravity="center_horizontal"
        android:text="00000000"
        android:textSize="76sp" />

    <TextView
        android:id="@+id/chk2"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="359dp"
        android:fontFamily="@font/go_mono_bold"
        android:gravity="center_horizontal"
        android:text="-"
        android:textSize="76sp" />

    <TextView
        android:id="@+id/txttimeshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="625dp"
        android:fontFamily="@font/go_mono_bold"
        android:gravity="center_horizontal"
        android:text="TIME"
        android:textColor="@color/colorG"
        android:textSize="36sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="617dp"
        android:fontFamily="@font/go_mono_bold"
        android:gravity="center_horizontal"
        android:text="BINARY"
        android:textColor="@color/colorR"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/txttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="624dp"
        android:fontFamily="@font/go_mono_bold"
        android:gravity="center_horizontal"
        android:text="00"
        android:textColor="@color/colorR"
        android:textSize="48sp" />

    <Button
        android:id="@+id/btnNum1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="231dp"
        android:layout_marginBottom="184dp"
        android:background="@drawable/round_button_yellow"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnNum2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="182dp"
        android:background="@drawable/round_button_blue"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnNum3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/round_button_red"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnNum4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/round_button_green"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="18sp" />

</RelativeLayout>